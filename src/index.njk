---
title: John Doe - Portfolio Website
layout: 'base.njk'
---
<div class="section landing">
    <div class="hero">
        <div class="avatar">
            <img src="https://via.placeholder.com/600" alt="A picture of me">
        </div>
        <h1 class="into">    
            Hi, my name is John Doe
        </h1>
        <h1 class="about">
            I am an ethusiastic Social Media Manager
        </h1>

        <div class="call-to-action">
            <a href="#latest_work" class="btn-primary">Latest Work <span>&#8595;</span></a>
        </div>
    </div>
</div>

<div class="section featured spacing">
    <span class="anchor-link" id="latest_work"></span>
    <div class="title">
        <h1>Featured Projects</h1>
    </div>

    <div class="projects">
        {% for item in collections.featured %}
        <div class="card">
            <img src="{{ item.data.image }}" alt="{{ item.data.imageAlt }}">
            <div class="content">
                <div class="card-title"><h4>{{ item.data.title }}</h4></div>
                <div class="card-date">{{ item.data.date | projectDate }}</div>
                <div class="card-breadcrumbs"><p>{{ item.data.summary }}</p></div>
                <a href="{{ item.url }}" class="card-cta btn-primary">Learn More</a>
            </div>
        </div>
        {% endfor %}
    </div>

    <a class="page-link" href="/work/">All Projects <span>&#8594;</span></a>
</div>

<div class="section contact-page spacing last-section">
    <div class="title">
        <h1>Interested in my work? Contact me below, its free...</h1>
    </div>

    <form action="" class="contact-form">
        <div class="contact-detail">
            <label for="name">
                Name
            </label>
            <input name="name" type="text" placeholder="John Doe">
        </div>
        <div class="contact-detail">
            <label for="email">
                Email
            </label>
            <input name="email" type="email" placeholder="example@domain.com">
        </div>
        <div class="contact-detail">
            <label for="message">
                Message
            </label>
            <textarea name="message" rows="4" placeholder="Enter message here..."></textarea>
        </div>
        <input type="submit" value="Get in Touch" class="btn-primary">
    </form>
</div>

<script>
var amountOfCards = $('.projects').children().length;
if(amountOfCards > 0 && amountOfCards % 2 !== 0){
    $('.projects').children().last().addClass("last-card");
}
</script>