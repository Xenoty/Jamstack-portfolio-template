---
layout: 'base.njk'
---

{% set metaTitle = title %}
{% set metaDescription = summary %}
{% set metaImage = image %}


<img class="work-bg-img" src="{{ image }}" alt="{{ imageAlt}}">
<div class="section spacing full-page top-p-m">
    <div class="title">
        <h1>{{ title }}</h1>
    </div>

    <div class="project-summary">
        <div class="project-meta">
            <div class="meta-container">
                <svg xmlns="http://www.w3.org/2000/svg" width="300" viewBox="0 0 300 150">
                    <rect fill="#ddd" width="300" height="150"/>
                    <text fill="rgba(0,0,0,0.5)" font-family="sans-serif" font-size="30" dy="10.5" font-weight="bold" x="50%" y="50%" text-anchor="middle">300×150</text>
                </svg>
                <p>{{date | projectDate}}</p>
            </div>
            <div class="meta-container">
                <svg xmlns="http://www.w3.org/2000/svg" width="300" viewBox="0 0 300 150">
                    <rect fill="#ddd" width="300" height="150"/>
                    <text fill="rgba(0,0,0,0.5)" font-family="sans-serif" font-size="30" dy="10.5" font-weight="bold" x="50%" y="50%" text-anchor="middle">300×150</text>
                </svg>
                <a href="#" class="font-italics">Link to Project &#8594;</a>
            </div>
        </div>
        <p>{{ summary }}</p>

        <div class="cta centre-parent">
            <a href="#target-content" class="btn-primary">Tell me more!<span>&#8595;</span></a>
        </div>
    </div>
</div>

<div class="section work-content markdown spacing bottom-m-l top-m-s">
    <span class="anchor-link" id="target-content"></span>
        {{ content | safe }}
</div>