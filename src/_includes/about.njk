---
layout: 'base.njk'
---

<div class="section spacing top-m-s">
    <div class="title">
        <h1>Get to Know Me</h1>
    </div>

    <div class="about-grid">
        <img src="{{ landingImage }}" 
             alt="{{ landingImageAlt }}">
        <div class="about-intro">
            <p class="intro-meta">
               {{ summary }}
            </p>
            <div class="about-links">
                {% for item in links %}
                    <a href="{{ item.url }}" 
                      class="btn-primary bg-white font-italics"> 
                      {{ item.linkName }} 
                      <span>&#8594;</span>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<div class="section spacing">
    <div class="title">
        <h1>Skills</h1>
    </div>

    <div class="skills">
        <div class="skills-container">

            {% for skill in skills %}
                <div class="skill-card">
                    <p>{{ skill.name }}</p>
                    <img src="{{ skill.image }}" 
                         alt="{{ skill.imageAlt }}">
                </div>
            {% endfor %}
            
        </div>
    </div>
</div>

<div class="section spacing">
    <div class="title">
        <h1>Interests</h1>
    </div>

    <div class="interests-list">                    
        <ul>
            {% for item in interests %}
                <li>{{ item }}</li>
            {% endfor %}
        </ul>
        <img src="https://via.placeholder.com/600" alt="placeholderImage">
    </div>

    <div class="spacing markdown bottom-m-l top-m-s">

        {{ content | safe}}

    </div>
</div>