---
layout: 'base.njk'
eleventyComputed:
  SEO: 
    metaTitle: "{{title}}"
    metaDescription: "{{summary}}"
    metaImage: "{{landingImage}}"
---

<div class="section landing">
    <div class="hero">
        <div class="avatar">
            <img src="{{ landingImage }}" alt="{{ landingImageAlt }}"> 
        </div>
        <h1 class="intro">    
            {{ intro }}
        </h1>
        <h1 class="short-summary">
            {{ summary }}
        </h1>

        <div class="call-to-action">
            <a href="#latest_work" class="btn-primary">Latest Work <span>&#8595;</span></a>
        </div>
    </div>
</div>

<div class="section featured spacing">
    <span class="anchor-link" id="latest_work"></span>
    <div class="title">
        <h1>Featured Projects</h1>
    </div>

    <div class="projects">

        {% for project in collections.featured | reverse %}
            {% include 'partials/_project-snippet.njk' %}
        {% endfor %}
        
    </div>

    <a class="page-link" href="/work/">All Projects <span>&#8594;</span></a>
</div>

<div class="section contact-page spacing last-section top-m-l">
    <div class="title">
        <h1>Interested in my work? Contact me below, its free...</h1>
    </div>

     {% include 'partials/_contact-form.njk' %}
     
</div>

<script>
var amountOfCards = $('.projects').children().length;
if(amountOfCards > 0 && amountOfCards % 2 !== 0){
    $('.projects').children().last().addClass("last-card");
}
</script>